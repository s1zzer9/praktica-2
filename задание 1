#include <iostream>
using namespace std;

int main() {
    setlocale(0, "");
    
    int n;
    cout << "введите целые числа\n";
    cin >> n;
    int num;
    int i{ 1 };
   
    int min, count;
    cin >> min;
    count = 1;
   

    for (int i = 1; i < n; i++) {
        
        cin >> num;

        if (num < min) {
            min = num;
            count = 1;
        }
        else if (num == min) {
            count++;
        }
    }

    cout << "Минимальное число: " << min << endl;
    cout << "Количество повторений: " << count << endl;

    return 0;
}
